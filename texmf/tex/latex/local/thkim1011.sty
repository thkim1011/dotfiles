% Command for wrapping theorem environments in boxes
\newcommand{\wraptheorem}[3]{%
    \newenvironment{#1}[1][]{%
        \begin{tcolorbox}[breakable, 
            skin=enhancedmiddle, 
            frame hidden,
            colback=#3!20,
            borderline={1mm}{0mm}{#3},
            before upper={\parindent15pt}]
            \ifstrempty{##1}{\begin{#2}}{\begin{#2}[##1]}
    }
    {
            \end{#2}
        \end{tcolorbox} 
    }   
}

